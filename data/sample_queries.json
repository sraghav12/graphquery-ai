    "advanced_queries": [
        {
            "category": "Multi-hop Queries",
            "examples": [
                "Which actors have worked in both Comedy and Action genres?",
                "Find directors who also acted in their movies",
                "Which actors appeared in more than 3 movies?",
                "Movies with the same director and actor"
            ]
        },
        {
            "category": "Aggregation Queries",
            "examples": [
                "What is the average IMDB rating?",
                "Find the highest rated movies",
                "Which genre has the most movies?",
                "Top 5 most prolific actors"
            ]
        },
        {
            "category": "Pattern Queries",
            "examples": [
                "Find movie chains where actors worked together",
